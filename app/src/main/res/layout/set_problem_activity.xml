<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorBlack">

    <LinearLayout
        android:id="@+id/set_problem_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_problem_cancel"
            android:background="@drawable/rounded_button"
            style="@style/Button"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_problem"
            android:textSize="30sp"
            android:textStyle="bold"
            style="@style/WhiteText"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_problem_next"
            android:background="@drawable/rounded_button"
            style="@style/Button" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_problem_wall"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/hold_row_setproblem" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/user_instructions"
            style="@style/Button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_button"
            android:onClick="UserInfo"
            android:text="@string/set_problem_info" />
    </LinearLayout>




</LinearLayout>