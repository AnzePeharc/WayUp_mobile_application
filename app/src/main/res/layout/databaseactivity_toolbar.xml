<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:id="@+id/databaseactivity_toolbar"
    android:background="@color/colorBlack">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="ClickMenu"
        android:src="@drawable/ic_menu"/>

    <TextView
        android:id="@+id/problem_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/problem_count"
        android:gravity="fill_vertical"
        android:textColor="@color/colorWhite"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        style="@style/WhiteText"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="ShowTwoProblems"
        android:src="@drawable/ic_database_activity_show"/>

    <SearchView
        android:id="@+id/search_menu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_round_search_menu"
        android:background="@drawable/customborder_white_full"
        android:layout_margin="10dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="FilterOptions"
        android:src="@drawable/ic_outline_filter"/>

</LinearLayout>