<resources>

    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorCyan</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="WhiteText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BlackText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>
